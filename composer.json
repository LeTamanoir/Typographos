{
    "name": "phpts/php-ts-gen",
    "description": "Generate TypeScript types from your PHP Data Transfer Objects (DTOs)",
    "keywords": [
        "PhpTs",
        "php-ts-gen"
    ],
    "homepage": "https://github.com/phpts/php-ts-gen",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Saldinger",
            "email": "martin.saldinger@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PhpTs\\PhpTsGen\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTs\\PhpTsGen\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
